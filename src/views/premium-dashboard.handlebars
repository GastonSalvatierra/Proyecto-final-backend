

{{#if isValid}}
<div class="container-fluid d-flex flex-column">

    <div>
        <h1>USUARIO PREMIUM, ACCEDISTE A UN 15% OFF EN TODOS LOS PRODUCTOS </h1>
        <h2>{{email}}</h2>
        <h2>{{user}}</h2>
    </div>

    <span>
        <i class="fas fa-shopping-cart fa-lg" id="carrito-btn" data-bs-toggle="modal" data-bs-target="#exampleModal" alt="carrito"></i>
        <span id="resultado">0</span>
    </span>
    <br>
    <span>
        <i class="fas fas fa-user-edit fa-lg" id="premium-btn" data-bs-toggle="modal" data-bs-target="#exampleModalPremium" alt="userPremium" ></i>
    </span>



    <div class="d-flex justify-content-center flex-wrap">
    {{#each docs}}
        <div class="card col-md-3 m-3">
            <div class="shadow bg-dark text-white" style="border-radius: 1rem;">
                <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top" alt="Hollywood Sign on The Hill" style="border-radius: 1rem;">
                <div class="card-body text-center" id="{{this.id}}">
                    <h5 class="card-title">Titulo {{this.title}}</h5>
                    <p class="card-description">Descripcion: {{this.description}}</p>
                    <p class="card-text">Categoria: {{this.category}}</p>
                    <p class="card-price">Precio: {{this.price}}</p>
                    <button class="addProduct btn btn-outline-light" type="submit">agregar al carrito</button>
                    
                </div>
            </div>
        </div>
    {{/each}}
</div> 


<section class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Carrito de compra</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            
            <div class="row text-center" id="carrito">
        
            </div>
            
        </div>
        <div class="modal-footer">
            <button class="btn-compra-final btn btn-primary">Finalizar compra</button>
            <div id="total"></div>
        </div>
    </div>
</section>

<section class="modal fade" id="exampleModalPremium" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">HACETE PREMIUM</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-between">
                <div class="card text-center justify-content-center" style="width: 18rem; height: 18rem;">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <label for="photo-dni" class="btn btn-secondary d-flex align-items-center justify-content-center" style="width: 100%;">
                            <i class="fas fa-id-card"></i> Foto del DNI
                        </label>
                        <input type="file" id="photo-dni" name="profile" style="display: none;" accept="image/*">
                    </div>
                </div>
                <div class="card text-center justify-content-center" style="width: 18rem; height: 18rem;">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <label for="certificate-domicile" class="btn btn-secondary d-flex align-items-center justify-content-center" style="width: 100%;">
                            <i class="fas fa-file"></i> Certificado de domicilio
                        </label>
                        <input type="file" id="certificate-domicile" name="documents" style="display: none;" accept="image/*">
                    </div>
                </div>
                <div class="card text-center justify-content-center" style="width: 18rem; height: 18rem;">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <label for="account-statement" class="btn btn-secondary d-flex align-items-center justify-content-center" style="width: 100%;">
                            <i class="fas fa-file"></i> Estado de cuenta
                        </label>
                        <input type="file" id="account-statement" name="products" style="display: none;" accept="image/*">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="uploadFilesBtn" type="button" class="btn btn-primary">Subir Archivos</button>

                <div id="total"></div>
            </div>
        </div>
    </div>
</section>





    <div class="d-flex flex-row justify-content-center">
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            {{!-- numero de pagina --}}
            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}
    </div>

</div>


    <button id="closeAll" type="button" class="btn btn-outline-dark btn-xs ">Cerrar sesion</button>

    {{else}}
    <h1>No hay productos para mostrar</h1>
    {{/if}}



<script src="/js/logout.js"></script>
